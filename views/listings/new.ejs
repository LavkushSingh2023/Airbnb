<% layout('/layouts/boilerplate') %>
<div class="row">
<div class="col-8 offset-2">
<body>
    <h3>Create new listing:</h3>
    <form method="post" action="/listings/new" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" id="" placeholder="Add a catchy title" class="form-control" required>
        <div class="invalid-feedback">
            Please enter the valid title
        </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" id="" class="form-control" required></textarea> 
        <div class="invalid-feedback">
            Please enter the valid description
        </div>
        </div>

        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
        <input type="text" name="listing[image]" id="" placeholder="Enter image url/link" class="form-control">
        </div> -->

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" name="listing[image]" id="" class="form-control"> 
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
        <input name="listing[price]" id="" placeholder="1200" class="form-control" required>
        <div class="invalid-feedback">
            Please enter the valid price
        </div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" id="" placeholder="India" class="form-control" required>
            <div class="invalid-feedback">
                Please enter the valid country
            </div>
        </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[location]" id="" placeholder="Jaipur/Rajasthan" class="form-control" required>
        <div class="invalid-feedback">
            Please enter the valid location
        </div>
        </div>
        <br>
        <button class="btn btn-dark new-btn">Add</button>
        <br><br>
    </form>
</body>
</div>
</div>